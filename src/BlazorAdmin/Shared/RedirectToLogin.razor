@inject NavigationManager Navigation
@inject IJSRuntime JsRuntime

@code {

    protected override void OnInitialized()
    {
        var loginUrl = Navigation.ToAbsoluteUri($"Identity/Account/Login?returnUrl=" +
            $"/{Uri.EscapeDataString(Navigation.ToBaseRelativePath(Navigation.Uri))}").PathAndQuery;

        JsRuntime.InvokeVoidAsync("location.replace", loginUrl);
    }

}