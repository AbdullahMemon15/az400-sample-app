@namespace eShopOnBlazorWasm.Features.CatalogItems.Components
@using eShopOnBlazorWasm.Features.Bases
@inherits BaseComponent

<div data-qa="@TestId">
  <p>CatalogItemList Component</p>

  <table class="table">
    <thead>
      <tr class="esh-table-header">
        <th></th>
        <th>Name</th>
        <th>Description</th>
        <th>Brand</th>
        <th>Type</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var catalogItem in CatalogItemState.CatalogItems)
      {
        <tr>
          <td>
            <img class="esh-thumbnail" src="@($"/Pics/{catalogItem.PictureUri}")">
          </td>
          <td>
            <p>@catalogItem.Name</p>
          </td>
          <td>
            <p>@catalogItem.Description</p>
          </td>
          <td>
            <p>@catalogItem.CatalogBrandId</p>
          </td>
          <td>
            <p>@catalogItem.CatalogTypeId</p>
          </td>
          <td>
            <span class="esh-price">@catalogItem.Price</span>
          </td>
          <td>
            <p>@catalogItem.PictureUri</p>
          </td>
          <td>
            <a href="@($"/Catalog/Edit/{catalogItem.Id}")" class="esh-table-link">
              Edit
            </a>
            |
            <a href="@($"/Catalog/Details/{catalogItem.Id}")" class="esh-table-link">
              Details
            </a>
            |
            <a href="@($"/Catalog/Delete/{catalogItem.Id}")" class="esh-table-link">
              Delete
            </a>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>
